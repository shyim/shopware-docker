#!/usr/bin/env bash

if [[ -e /nvm/versions/ ]]; then
  rm -rf /nvm/*
  rm -rf /nvm/.cache
fi

if [[ ! -e /nvm/fmn/ ]]; then
  fnm --fnm-dir=/nvm/.fnm install 12
  # shellcheck disable=SC2046
  eval $(fnm --fnm-dir=/nvm/.fnm env --shell=bash)
  fnm use 12
else
  # shellcheck disable=SC2046
  eval $(fnm --fnm-dir=/nvm/.fnm env --shell=bash)
fi